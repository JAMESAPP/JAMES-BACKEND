<h1>Listing refuels</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Km</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Gas station</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @refuels.each do |refuel| %>
      <tr>
        <td><%= refuel.date %></td>
        <td><%= refuel.KM %></td>
        <td><%= refuel.amount %></td>
        <td><%= refuel.price %></td>
        <td><%= refuel.gas_station %></td>
        <td><%= refuel.observation %></td>
        <td><%= link_to 'Show', refuel %></td>
        <td><%= link_to 'Edit', edit_refuel_path(refuel) %></td>
        <td><%= link_to 'Destroy', refuel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

